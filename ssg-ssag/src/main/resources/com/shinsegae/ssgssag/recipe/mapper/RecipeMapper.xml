<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shinsegae.ssgssag.recipe.mapper.RecipeMapper">	<!-- 인터페이스 -->

<!-- 등록 -->
<insert id="recipeInsert" parameterType="com.shinsegae.ssgssag.recipe.vo.RecipeVO">
	INSERT INTO recipe (
		recipe_id
	) VALUES (
		#{recipe_id}
	)
</insert>

<!-- 레시피 이름 조회 -->
<select id="selectList" resultType="com.shinsegae.ssgssag.recipe.vo.RecipeVO">
	SELECT * FROM recipe
	<where>
		<if test="rname != '' and rname != null">
			AND recipe_name LIKE '%${rname}%'
		</if>
	</where>
</select>

<!-- 레시피 재료 조회 -->
<select id="selectIngre" resultType="com.shinsegae.ssgssag.recipe.vo.RecipeVO">
	SELECT * FROM recipe
	WHERE recipe_id IN (
		SELECT recipe_id FROM recipe_ing
		WHERE ing_id IN (
			SELECT ing_id FROM ingredients
			<where>
			<if test="iname != '' and iname != null">
			AND ing_name LIKE '%${iname}'  
			</if>
			</where>
		)
	)
</select>


</mapper>